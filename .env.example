# Environment Configuration
DEBUG=True
HOST=0.0.0.0
PORT=5000

# External API settings
EXTERNAL_API_TIMEOUT=10

# Mind map generation settings
MAX_NODES=100
MAX_LEVELS=4

# CORS settings (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Neo4j Cloud (optional) - when set, generated mindmaps will be saved to Neo4j
# Example URI: "neo4j+s://<HOST>:7687" (use the secure bolt scheme for Aura)
NEO4J_URI=
NEO4J_USER=
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j
